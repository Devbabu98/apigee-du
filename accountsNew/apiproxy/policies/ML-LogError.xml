<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<MessageLogging async="false" continueOnError="false" enabled="true" name="ML-LogError">
    <DisplayName>ML-LogError</DisplayName>
    <File>
        <Message>{message.header.timestamp} - LOG - ERROR: {originalReq}</Message>
        <FileName>log.log</FileName>
        <FileRotationOptions rotateFileOnStartup="true">
            <FileRotationType>SIZE</FileRotationType>
            <MaxFileSizeInMB>10</MaxFileSizeInMB>
            <MaxFilesToRetain>10</MaxFilesToRetain>
        </FileRotationOptions>
    </File>
    <logLevel>ERROR</logLevel>
</MessageLogging>